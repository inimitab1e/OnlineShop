<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_b</item>
    </style>

    <style name="TextViewSecondaryTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_b</item>
    </style>

    <style name="TextViewPickedItemsText">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_b</item>
    </style>

    <style name="TextViewPickedItemsSecondaryText">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_b</item>
    </style>

    <style name="TextViewSignInWith">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_m</item>
    </style>

    <style name="EditTextAuthGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewAuthGroupErrors">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/auth_error_message_color</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="ButtonsBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_b</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonsProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_b</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="background">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="LatestAndBrandsLayout">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="SalesLayout">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="TextViewLatestAndBrandsBrandName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextViewSaleBrandName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewCategoryName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewSecondaryLatest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextViewHomeTitlesText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewHomeHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SearchViewHome">
        <item name="fontFamily">@font/montserrat_m</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>